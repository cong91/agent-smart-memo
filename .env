# Agent-Memo Plugin Configuration
# Copy this file to .env and update values as needed

# ============================================================================
# Qdrant Vector Database
# ============================================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=mrc_bot_memory
QDRANT_TIMEOUT=30000

# ============================================================================
# Ollama LLM (for Auto-Capture)
# ============================================================================
OLLAMA_HOST=http://localhost
OLLAMA_PORT=11434
OLLAMA_MODEL=deepseek-r1:8b
OLLAMA_TIMEOUT=60000

# ============================================================================
# Embedding Service
# ============================================================================
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1024
EMBEDDING_API_URL=http://localhost:8000

# ============================================================================
# Auto-Capture Settings
# ============================================================================
AUTO_CAPTURE_ENABLED=true
AUTO_CAPTURE_MIN_CONFIDENCE=0.5
AUTO_CAPTURE_USE_LLM=true

# ============================================================================
# State Storage
# ============================================================================
STATE_DIR=~/.openclaw

# ============================================================================
# Plugin Defaults
# ============================================================================
DEFAULT_NAMESPACE=default
DEFAULT_SLOT_CATEGORIES=profile,preferences,project,environment,custom
